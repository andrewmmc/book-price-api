{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": ["dom", "es6", "dom.iterable", "scripthost", "esnext"],
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
